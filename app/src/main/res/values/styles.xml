<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme." parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="NavigationTheme">
        <item name="android:textColor">@color/drawerItemTextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HeaderLinearLayoutStyle">
        <item name="android:textColor">@color/drawerEmailColor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DrawerArrowStyle" parent="ThemeOverlay.AppCompat.ActionBar">
    <item name="android:color">#FFFFFF</item>
</style>
    <style name="customRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small"></style>
</resources>
